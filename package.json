{
  "name": "opencode-time-refresh",
  "version": "0.4.0",
  "description": "OpenCode plugin for automatic time injection into messages",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm run build:bundle && npm run build:types",
    "build:bundle": "esbuild src/index.ts --bundle --platform=node --format=esm --outfile=dist/index.js --external:fs --external:path",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run clean && npm run build && npm run test"
  },
  "keywords": [
    "opencode",
    "plugin",
    "time",
    "date",
    "context"
  ],
  "author": "OpenCode Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/opencode-ai/opencode-time-refresh.git"
  },
  "bugs": {
    "url": "https://github.com/opencode-ai/opencode-time-refresh/issues"
  },
  "homepage": "https://github.com/opencode-ai/opencode-time-refresh#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "esbuild": "^0.27.2",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
